@model IEnumerable<test_task.Models.Company>

@{
    ViewData["Title"] = "Edit page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit company page</h1>

<p  class="mt-2">
    <a asp-action="AddCompany" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Create new</span>
        </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Form)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Form)
            </td>
            <td>
                <a asp-action="EditCompany" asp-route-id="@item.Id" class="btn btn-outline-info">
                   <span class="fas fa-edit"></span>
                </a>
                <a asp-action="DeleteCompany" asp-route-id="@item.Id" class="btn btn-outline-danger">
                   <span class="fas fa-trash-alt"></span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
